<div class="container">
    <div class="card col-md-8 offset-md-2">
    <div class="card-header d-flex justify-content-between aling-items-center">
        <h2>{{img.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{img.uniqueId}}">
            <i class="fa fa-times"></i> Borrar
        </button>
    </div>
    <div class="card-body">
        <p>{{img.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{img.filename}}" alt="" class="w-100 h-100 img-fluid">
        </div>
    </div>
    <div class="card-footer  d-flex justify-content-between aling-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{img.filename}}">
            <i class="fas fa-thumbs-up"></i>Like
        </button>
        <p>
            <span class="likes-count"> {{img.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{img.views}}
        </p>
        <p>
            <i class="far fa-clocl"></i> {{timeago img.timestamp}}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between aling-items-center">
        <h3>Comentarios...</h3>
        <button class="btn btn-info" id="btn-toggle-coment">
            <i class="fa fa-comment-o"></i>Post a Public Comment
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/iamges/{{img.uniqueId}}/comment" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" required> 
                </div>
                <div class="form-group">
                    <textarea name="comment" id="" rows="2" class="form-control" placeholder="Comentario..." required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Post..
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comment}}
                <li class="list-group-item">
                    <div class="row">
                        <a href="" class="col text-center">
                            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=50" alt="">
                        </a>
                        <blockquote class="col">
                            <p class="lead">{{comment}}</p>
                            <footer class="blockquote-footer">
                                {{name}}-{{timeago timestamp}}
                            </footer>
                        </blockquote>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
</div>

